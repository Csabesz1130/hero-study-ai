# =======================================================
# Global Knowledge Co-Pilot - Production Environment
# =======================================================

# Application Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-domain.com

# Database Configuration
POSTGRES_USER=copilot_user
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=hero_study_copilot
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379
REDIS_URL=redis://default:${REDIS_PASSWORD}@redis:6379

# MinIO Object Storage Configuration
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=your-secure-minio-password
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}
MINIO_BUCKET=copilot-files

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://elasticsearch:9200

# RabbitMQ Configuration
RABBITMQ_USER=copilot_rabbit
RABBITMQ_PASSWORD=your-secure-rabbitmq-password
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@rabbitmq:5672/copilot_vhost

# JWT Security Configuration
JWT_SECRET=your-super-secret-jwt-key-256-bits-minimum
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Email Configuration (Optional)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@your-domain.com

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Application Services Ports
APP_PORT=3000
FILE_SERVICE_PORT=3002
WEBSOCKET_PORT=3003

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password
LOGSTASH_PORT=5044
HEALTHCHECK_PORT=8080

# Application Features
ENABLE_METRICS=true
LOG_LEVEL=info
ENABLE_DEBUG=false

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,zip,rar
UPLOAD_TIMEOUT=300000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true

# Security Headers
ENABLE_HELMET=true
ENABLE_CSRF=true
SESSION_SECRET=your-session-secret-key

# Analytics & Tracking (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# External API Configurations
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Performance Configuration
NODE_OPTIONS="--max-old-space-size=2048"
UV_THREADPOOL_SIZE=4

# Development Overrides (leave empty in production)
DATABASE_URL_OVERRIDE=
REDIS_URL_OVERRIDE=

# =======================================================
# Security Notes:
# 1. Change ALL default passwords
# 2. Use strong, unique secrets (>32 characters)
# 3. Enable SSL/TLS certificates
# 4. Configure firewall rules
# 5. Regular backup verification
# 6. Monitor security logs
# =======================================================